<project name="testS" default="build">

    <target name="clear-logs">
        <echo>Removing all log files</echo>
        <delete>
            <fileset dir="logs" includes="**/*.log"/>
        </delete>
    </target>

    <target name="composer">
        <echo>Vendors updating</echo>
        <exec executable="php" failonerror="true">
            <arg value='composer.phar' />
            <arg value='install' />
        </exec>
        <exec executable="php" failonerror="true">
            <arg value='composer.phar' />
            <arg value='update' />
        </exec>
    </target>

    <target name="clear-db">
        <echo>DB clear</echo>
        <exec executable="php" failonerror="true">
            <arg value='bin/clear-db' />
        </exec>
    </target>

    <target name="build" depends="clear-logs, clear-db">
    </target>

</project>