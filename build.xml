<project name="testS" default="default">

    <target name="clear-logs">
        <echo>Removing all log files</echo>
        <delete>
            <fileset dir="logs" includes="**/*.log"/>
        </delete>
    </target>

    <target name="composer" depends="clear-logs">
        <echo>Composer updating</echo>
        <exec executable="/bin/bash">
            <arg value="bin/composer"/>
        </exec>
    </target>

    <target name="clear-db" depends="composer">
        <echo>DB clear</echo>
        <exec executable="/bin/bash">
            <arg value="./bin/clear-db"/>
        </exec>
    </target>

    <target name="default" depends="clear-db">
    </target>

</project>