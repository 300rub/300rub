#!/bin/bash

command="phpunit"

if [[ $1 != "-" ]]; then
  path=${1/$PWD\/code\/dev\//}
fi

if [[ $1 == "-" ]]; then
  command="phpunit-reload-fixtures"
fi

if [[ $2 == "-" ]]; then
  command="phpunit-reload-fixtures"
fi

if [[ $path == "" ]]; then
  docker exec -it ss_phpfpm_1 ant -file /var/www/code/live/config/build/build.xml $command -Dpath="tests/unit"
  exit 1
fi

docker exec -it ss_phpfpm_1 ant -file /var/www/code/live/config/build/build.xml $command -Dpath=$path
