#!/bin/bash

trap "exit" INT

docker-compose -f docker-compose.yml -f docker-compose-dev.yml kill
docker-compose -f docker-compose.yml -f docker-compose-dev.yml rm -f
docker-compose -f docker-compose.yml -f docker-compose-dev.yml up -d

sleep 5

mysql -u root -proot -h 127.0.0.1 -P 7777 -e "CREATE DATABASE testS"
mysql -u root -proot -h 127.0.0.1 -P 7777 -e "GRANT ALL PRIVILEGES ON testS.* TO 'root'@'127.0.0.1' IDENTIFIED BY 'root'"

docker exec -it tests_phpfpm_1 ant