#!/bin/bash

path=${1/$PWD\/code\/dev\//}

if [[ $path == "" ]]; then
  docker exec -it ss_phpfpm_1 ant -file /var/www/code/live/config/build/build.xml code-htmlhint -Dpath="public/static"
  exit 1
fi

docker exec -it ss_phpfpm_1 ant -file /var/www/code/live/config/build/build.xml code-htmlhint -Dpath=$path