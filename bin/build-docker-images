#!/bin/bash

trap "exit" INT
baseDir=$(dirname "$0")

for imagePath in `find $baseDir/../code/live/config/docker/images*/* -type d`
do
    echo $imagePath
    IFS='/' read -r -a array <<< "$imagePath"
    arrayLen=${#array[@]}
    imageName=ss/${array[$arrayLen-2]}:${array[$arrayLen-1]}
    docker build --build-arg http_proxy=http://147.149.2.7:8080 --build-arg https_proxy=http://147.149.2.7:8080 -t $imageName $imagePath
    #docker build -t $imageName $imagePath
done