#!/bin/bash

path=${1/$PWD\//}

if [[ $path == "" ]]; then
  docker exec -it ss_phpfpm_1 ant -file /var/www/code/live/config/build/build.xml lesshint -Dpath="/var/www/public/less"
  exit 1
fi

docker exec -it ss_phpfpm_1 ant -file /var/www/code/live/config/build/build.xml lesshint -Dpath="/var/www/$path"