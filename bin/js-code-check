#!/bin/bash

path=${1/$PWD\/code\/dev\//}

if [[ $path == "" ]]; then
  docker exec -it ss_instance_1 ant -file /var/www/code/config/build/build.xml code-js-check -Dpath="public/static"
  exit 1
fi

docker exec -it ss_instance_1 ant -file /var/www/code/config/build/build.xml code-js-check -Dpath=$path