<?xml version="1.0" encoding="UTF-8"?>
<project name="dev">
    <target name="dev-upload-prepare">
        <delete dir="public/upload/dev" />
        <mkdir dir="public/upload/dev" />
        <exec executable="chmod" failonerror="true">
            <arg line="-R 0777 public/upload/dev" />
        </exec>
    </target>

    <target name="dev-migrate">
        <exec executable="php" failonerror="true">
            <arg value='commands/run' />
            <arg value='db/MigrateCommand' />
            <arg value='dev' />
        </exec>
    </target>

    <target
        name="dev-setup"
        depends="
            db-recreate-system-databases,
            db-recreate-dev-database
        "
    >
    </target>

