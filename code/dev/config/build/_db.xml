<?xml version="1.0" encoding="UTF-8"?>
<project name="db">
    <target name="db-recreate-dev-databases">
        <exec executable="php" failonerror="true">
            <arg value='commands/run' />
            <arg value='db/RecreateDevDatabasesCommand' />
        </exec>
    </target>

    <target name="db-export-sites">
        <exec executable="php" failonerror="true">
            <arg value='commands/run' />
            <arg value='db/ExportSitesCommand' />
        </exec>
    </target>

    <target name="db-migrate">
        <exec executable="php" failonerror="true">
            <arg value='commands/run' />
            <arg value='db/MigrateCommand' />
        </exec>
    </target>

    <target name="db-import-system-fixtures">
        <exec executable="php" failonerror="true">
            <arg value='commands/run' />
            <arg value='db/ImportFixturesCommand' />
            <arg value='help' />
        </exec>

        <exec executable="php" failonerror="true">
            <arg value='commands/run' />
            <arg value='db/ImportFixturesCommand' />
            <arg value='system' />
        </exec>
    </target>

    <target name="db-import-dev-fixtures">
        <exec executable="php" failonerror="true">
            <arg value='commands/run' />
            <arg value='db/ImportFixturesCommand' />
            <arg value='dev' />
        </exec>
    </target>

    <target name="db-import-sites">
        <exec executable="php" failonerror="true">
            <arg value='commands/run' />
            <arg value='db/ImportSitesCommand' />
        </exec>
    </target>

    <target name="db-generate-source">
        <exec executable="php" failonerror="true">
            <arg value='commands/run' />
            <arg value='db/GenerateSourceCommand' />
        </exec>
    </target>
</project>
