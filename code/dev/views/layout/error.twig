<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>{{ code }} {{ message }}</title>
    <link rel="shortcut icon" href="{{ icon }}"/>

    {% for fileName in css %}
        <link rel="stylesheet" type="text/css" href="{{ fileName }}" />
    {% endfor %}

    {% if less is not empty %}
        <link rel="stylesheet" type="text/css" href="{{ less }}" />
    {% endif %}
</head>

<body>
    <div class="container">
        <h1>{{ code }}</h1>
        <div class="content">{{ message }}</div>

        {% if isDev == true %}
            <div class="content">
                {{ file }} ({{ line }})
            </div>
            <div class="content">
                {% for number, value in backtrace %}
                    <div>
                        #{{ number + 1 }} {{ value.file }} ({{ value.line }})
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</body>

</html>