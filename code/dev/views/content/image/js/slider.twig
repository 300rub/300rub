<script>
    !function () {
        var options = {
            {% if hasAutoPlay == true %}
                $AutoPlay: 1,
                {% if playSpeed > 0 %}
                    $Idle: {{ playSpeed * 1000 }},
                {% endif %}
            {% endif %}
            $FillMode: 5,
            $BulletNavigatorOptions: {
                $Class: $JssorBulletNavigator$,
                $ChanceToShow: 2,
                $AutoCenter: 1,
                $Steps: 1,
                $Rows: 1,
                $Orientation: 1
            },
            $ArrowNavigatorOptions: {
                $Class: $JssorArrowNavigator$,
                $ChanceToShow: 2,
                $AutoCenter: 2,
                $Steps: 1
            },
            $ThumbnailNavigatorOptions: {
                $Class: $JssorThumbnailNavigator$,
                $Orientation: 2,
                $NoDrag: true
            },
            {% if effectValues | length > 0 %}
                $SlideshowOptions: {
                    $Class: $JssorSlideshowRunner$,
                    $Transitions: [{{ effectValues | join(",") }}],
                    $TransitionsOrder: 1
                },
            {% endif %}
        };

        var slider;
        $("{{ container }} .slider-container").each(function() {
            slider = new $JssorSlider$($(this).attr("id"), options);
        });

        {% if isFullWidth == true %}
            var maxWidth = 3000;
            var scaleSlider = function() {
                var containerElement = slider.$Elmt.parentNode;
                var containerWidth = containerElement.clientWidth;
                if (containerWidth) {
                    var expectedWidth
                        = Math.min(maxWidth || containerWidth, containerWidth);
                    slider.$ScaleWidth(expectedWidth);
                } else {
                    window.setTimeout(scaleSlider, 30);
                }
            };
    
            scaleSlider();

            $Jssor$.$AddEvent(window, "load", scaleSlider);
            $Jssor$.$AddEvent(window, "resize", scaleSlider);
            $Jssor$.$AddEvent(window, "orientationchange", scaleSlider);
        {% endif %}
    }();
</script>
